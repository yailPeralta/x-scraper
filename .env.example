# Application
NODE_ENV=development
PORT=3000

# Twitter Credentials
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password
TWITTER_EMAIL=your_email@example.com

# MongoDB
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB_NAME=twitter-scraper

# Playwright Configuration
PLAYWRIGHT_BROWSER=chromium  # Options: 'firefox' | 'chromium'
PLAYWRIGHT_HEADLESS=false
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_SLOW_MO=100

# Anti-Blocking Configuration
USE_FINGERPRINTS=true          # Enable Crawlee browser fingerprint spoofing
USE_CAMOUFOX=false             # Use Camoufox stealth Firefox build (disables fingerprints)
PROXY_URL=                     # Proxy URL, e.g. http://user:pass@proxy.example.com:8080

# Scraping Configuration
SCRAPING_MAX_TWEETS_PER_REQUEST=100
SCRAPING_SCROLL_DELAY=2000
SCRAPING_RETRY_ATTEMPTS=3
SCRAPING_RATE_LIMIT_DELAY=60000

# X API Official (XDK) Credentials
X_API_BEARER_TOKEN=your-bearer-token
X_API_KEY=your-api-key
X_API_SECRET=your-api-secret
X_API_ACCESS_TOKEN=your-access-token
X_API_ACCESS_TOKEN_SECRET=your-access-token-secret

# Tracker Configuration
TRACKER_PROFILE_POLL_INTERVAL=300000
TRACKER_FOLLOWER_POLL_INTERVAL=600000
TRACKER_TREND_POLL_INTERVAL=300000
TRACKER_ENGAGEMENT_POLL_INTERVAL=60000
TRACKER_TREND_WOEID=1

# Cron Tasks
# Cron expression for scraping trending tweets (default: every hour at :00)
TRENDING_TWEETS_CRON=0 * * * *

CURRENT_X_USER_ID=
